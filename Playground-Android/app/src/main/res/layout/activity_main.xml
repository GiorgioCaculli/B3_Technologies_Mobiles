<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:layout_margin="12dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        android:id="@+id/tv_mainActivity_helloWorld"
        android:textSize="32sp"
        android:textColor="@color/red"
        app:layout_constraintBottom_toTopOf="@id/et_mainActivity_pseudo"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/et_mainActivity_pseudo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/text"
        app:layout_constraintTop_toBottomOf="@id/tv_mainActivity_helloWorld"
        app:layout_constraintBottom_toTopOf="@id/btn_mainActivity_clickMe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:inputType="text" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_mainActivity_clickMe"
        android:text="@string/btn_mainActivity_clickMe"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/et_mainActivity_pseudo"
        app:layout_constraintBottom_toTopOf="@id/btn_mainActivity_goToActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_mainActivity_goToActivity"
        android:text="@string/go_to_second_activity"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@id/btn_mainActivity_clickMe"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toTopOf="@id/btn_mainActivity_openHELHa"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btn_mainActivity_openHELHa"
        android:text="Open HELHa"
        android:textSize="16sp"
        app:layout_constraintTop_toBottomOf="@+id/btn_mainActivity_goToActivity"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>
