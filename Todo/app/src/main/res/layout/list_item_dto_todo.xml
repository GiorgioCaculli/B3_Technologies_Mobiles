<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mainActivity_dtoId"
        android:text="0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="48sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mainActivity_dtoTitle"
        android:text="Placeholder title"
        app:layout_constraintLeft_toRightOf="@id/tv_mainActivity_dtoId"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:textSize="24sp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/tv_mainActivity_dtoIsDone"
        android:text="Placeholder is done"
        app:layout_constraintTop_toBottomOf="@id/tv_mainActivity_dtoTitle"
        app:layout_constraintLeft_toRightOf="@id/tv_mainActivity_dtoId"
        app:layout_constraintRight_toRightOf="parent"
        android:textSize="24sp"/>

</androidx.constraintlayout.widget.ConstraintLayout>
